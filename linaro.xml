<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Repositories -->

  <remote name="linaro-android"
          fetch="git://android.git.linaro.org/"
          review="review.android.git.linaro.org" />

  <remote name="github" fetch="http://github.com/96boards" />
  <remote name="robh" fetch="http://github.com/robherring" />
  <remote name="johnstultz" fetch="https://git.linaro.org/people/john.stultz" />
  <remote name="freedesktop" fetch="git://anongit.freedesktop.org/" />
  <remote name="x86" fetch="git://gitscm.sf.net/gitroot/android-x86/" />
  <remote name="swiftshader" fetch="https://swiftshader.googlesource.com/" />
  <remote name="eltechs" fetch="https://github.com/Eltechs" />

  <!-- Linaro Device Configs -->
  <project path="device/linaro/generic" name="generic_device" revision="double-zygote" remote="eltechs" groups="default" />

  <!-- Ubt as an external module -->
  <project path="external/ubt" name="android-ubt" revision="test" remote="eltechs" groups="default" />

  <!-- Setaddr32 tool for address space limitation -->
  <project path="external/setaddr32" name="setaddr32" revision="test" remote="eltechs" groups="default" />

  <!-- Pre-built kernel tree -->
  <project path="device/linaro/generic-kernels" name="AOSP/device/linaro/generic-kernels.git" revision="master" remote="johnstultz" groups="default" />

  <!-- Critical drm_hwcomposer components -->
  <remove-project path="external/mesa3d" name="platform/external/mesa3d" />
  <project path="external/mesa3d" name="mesa" revision="f11b35f" remote="robh" groups="default" />

  <project path="external/gbm_gralloc" name="gbm_gralloc" revision="4615512" remote="robh" groups="default" />

  <remove-project path="external/drm_hwcomposer" name="platform/external/drm_hwcomposer" />
  <project path="external/drm_hwcomposer" name="drm_hwcomposer" revision="e39513d" remote="robh" groups="default" />

  <remove-project path="external/libdrm" name="platform/external/libdrm" />
  <project path="external/libdrm" name="mesa/drm" revision="7e6bf88" remote="freedesktop" groups="default" />

  <!-- Extra features -->
  <project path="external/libpciaccess" name="libpciaccess" remote="robh" revision="93ebf4f" />

  <project path="external/iio-sensors-hal" name="android-iio-sensors-hal" revision="d19ba78" remote="robh" groups="default" />

  <project path="external/swiftshader" name="SwiftShader" revision="840b0ac" remote="swiftshader" groups="default" />

  <!-- Linaro Kernels -->
  <project path="kernel/common" name="kernel/common" revision="android-4.9" groups="default" />

</manifest>
